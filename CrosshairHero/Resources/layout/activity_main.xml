<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/AccentDark"
    android:paddingLeft="7dp"
    android:paddingRight="7dp">
    <RelativeLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/show_main_cross"
            android:src="@drawable/power_settings_stop_active"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/roundedcircule"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
    </RelativeLayout>
    <!--Header -->
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
             android:layout_width="300dp"
             android:layout_height="150dp"
             android:padding="7dp"
             android:layout_centerInParent="true"
             android:src="@drawable/war_1"
             android:scaleType="centerCrop"/>
        <ImageButton
            android:id="@+id/moveLeft_wars"
            android:background="@drawable/roundedcircule"
            android:src="@drawable/outline_chevron_left_24"
            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:layout_alignParentLeft="true"
            android:layout_height="30dp"/>
        <ImageButton
            android:contentDescription="Move Image"
            android:id="@+id/moveRight_wars"
            android:background="@drawable/roundedcircule"
            android:src="@drawable/outline_chevron_right_24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:layout_height="30dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="7dp"
        android:layout_marginBottom="7dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/roundededge">
        <ImageButton
            android:id="@+id/changecrosshair"
            android:background="@drawable/roundedcircule"
            android:text="@string/app_start"
            android:src="@drawable/apps__24px"
            android:layout_centerVertical="true"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <ImageButton
            android:id="@+id/changecrosscolor"
            android:background="@drawable/roundedcircule"
            android:src="@drawable/palette_24px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
    </RelativeLayout>
</RelativeLayout>