<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="7dp">
    <!--Header -->
    <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="60dp">
        <ImageButton
            android:id="@+id/show_main_cross"
            android:layout_centerInParent="true"
            android:background="@drawable/bordered_button"
            android:layout_width="100dp"
            android:layout_height="50dp"/>
    </RelativeLayout>
    <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="100dp"
        android:padding="7dp"
        android:background="@drawable/roundededge">
        <ImageButton
            android:id="@+id/changecrosshair"
            android:background="@drawable/roundedcircule"
            android:text="@string/app_start"
            android:src="@drawable/apps__24px"
            android:layout_centerVertical="true"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <ImageButton
            android:id="@+id/changecrosscolor"
            android:background="@drawable/roundedcircule"
            android:src="@drawable/palette_24px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
    </RelativeLayout>
    <ImageView
         android:layout_width="200dp"
         android:layout_height="80dp"
         android:padding="7dp"
         android:layout_marginTop="10dp"
         android:layout_gravity="center"
        android:src="@drawable/war_1"
        android:scaleType="centerCrop"/>
</LinearLayout>